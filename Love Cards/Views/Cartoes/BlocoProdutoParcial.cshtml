@model  List<Love_Cards.Models.Produto>

<div id="listaProduto" class="row">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var prod in Model)
        {
            <div class="col-md-6">
                <h2>@prod.Nome</h2>
                <img src=@prod.imagem alt="Imagem de capa do card">
                <p>Descrição breve do produto.</p>
                <h3>@prod.Preco.ToString("C")</h3>
                <a href="#" class="btn btn-primary">Comprar</a>
            </div>
        }
    }
    else
    {
        <div class="text-center">
            <p>Sem registro de produtos</p>
            <button class="btn btn-danger">@Html.ActionLink("Voltar", "Index", "Home")</button>
        </div>
    }
</div>